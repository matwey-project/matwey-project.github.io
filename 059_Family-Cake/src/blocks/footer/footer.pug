footer.footer
    .layout
        .footer__wrapper
            .footer__main
                .footer__col.footer__col-1
                    .footer__item
                        .footer__heading
                            h4 Follow Us
                        .socials__menu
                            a(href="#")
                                +iconSvg('32', '32', '0 0 32 32', 'icon-inst')
                            a(href="#")
                                +iconSvgSocial('14', '28', '0 0 14 28', 'icon-facebook')
                            a(href="#")
                                +iconSvgSocial('27', '22', '0 0 27 22', 'icon-twitter')
                            a(href="#")
                                +iconSvgSocial('20', '26', '0 0 20 26', 'icon-pinterest')

                    .footer__item
                        .footer__review
                            .footer__desc Reviews on Google
                            .range
                                p.footer__rating-number 4.9
                                .footer__rating
                                    +iconSvg('16', '16', '0 0 16 16', 'icon-star')
                                    +iconSvg('16', '16', '0 0 16 16', 'icon-star')
