extends ../templates/main

block variables
    - var title = 'AQENE'


block content
    main.main.main--default-offset

        .page-wrapper.page-wrapper--default-offset

            .title-inside.title-inside--bottom-offset.title-inside--position-center
                h1.current-date January 22

            .bookings
                .container
                    .bookings__book
                        .bookings__book-contents
                            p Book session with Dr. Jane Doe
                            p 30 minutes
                        i.icon-info
                            +iconSvg('26px', '26px', '0 0 26 26', 'icon-info')
                    .row
                        .col-lg-6
                            .calendar
                                table#calendar
                                    thead
                                        tr
                                            td(colspan="2")
                                                span.month-button.month-button--prev.
                                                    <svg width="8" height="12" viewBox="0 0 8 12" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0.589966 10.59L5.16997 6L0.589966 1.41L1.99997 0L7.99997 6L1.99997 12L0.589966 10.59Z" fill="#3A3FB0"/></svg>
