                                            td(colspan="5").text-left
                                        tr
                                            td Su
                                            td Mo
                                            td Tu
                                            td We
                                            td Th
                                            td Fr
                                            td Sa
                                    tbody
                        .col-lg-6
                            .select-option__main
                                .select-option__title
                                    h3 Select staff (optional)
                                .box-form__main.box-form__main--flex-position
                                    .box-form__items
                                        select.select-main
                                            option Dr. Jane Doe
                                            option Dr. Jane Doe 1
                                            option Dr. Jane Doe 2
                                            option Dr. Jane Doe 3
                                    .box-form__items.col-4
                                        label.radio-item
                                            input.radio-item__input(type="radio" name="radio" checked="checked" required="")
                                            span.radio-item__status 2:00 pm
